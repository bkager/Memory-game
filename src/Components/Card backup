//Cards display a picture
//Clicking on a card flips it over
//State: flipped/unflipped
//Hold this in Board
//Static info: cards are allotted images at the start of the game and this doesn't change
//This is allotted from Board, which holds the array/object with the image src data for rendering Cards

import React from "react";

function Card(props) {
  //State variable image: updates whether the card shows the front or back

  let show = "";

  if (props.show === "back") {
    visual = "/images/pattern.png";
  } else if (props.visual === "front") {
    visual = props.icon;
  }

  return (
    <img
      src={show}
      alt={props.alt}
      key={props.key}
      onClick={props.onClick}
      height="150"
      width="150"
    />
  );
}

export default Card;
